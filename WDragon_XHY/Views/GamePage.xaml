<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XiehouYu.Views.GamePage">
    <VerticalStackLayout Spacing="20" Padding="30,0" VerticalOptions="Center">
        <Label 
            x:Name="TimerLabel"
            Text="剩余时间: 30"
            FontSize="24"
            HorizontalOptions="Center" />

        <Label 
            x:Name="QuestionLabel"
            Text="加载中..."
            FontSize="28"
            HorizontalOptions="Center" />

        <Entry 
            x:Name="AnswerEntry"
            Placeholder="请输入答案..."
            HorizontalOptions="Fill" />

        <Button 
            x:Name="SubmitButton"
            Text="提交答案"
            Clicked="OnSubmitClicked"
            HorizontalOptions="Center" />

        <Button 
            x:Name="HintButton"
            Text="获取提示"
            Clicked="OnHintClicked"
            HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage> 