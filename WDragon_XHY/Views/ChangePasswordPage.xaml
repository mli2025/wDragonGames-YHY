<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XiehouYu.Views.ChangePasswordPage"
             Title="修改密码">
    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">
            <Frame BorderColor="LightGray" Padding="15">
                <VerticalStackLayout Spacing="15">
                    <Entry x:Name="CurrentPasswordEntry"
                           Placeholder="当前密码"
                           IsPassword="True"/>
                    
                    <Entry x:Name="NewPasswordEntry"
                           Placeholder="新密码"
                           IsPassword="True"/>
                    
                    <Entry x:Name="ConfirmPasswordEntry"
                           Placeholder="确认新密码"
                           IsPassword="True"/>
                    
                    <Button Text="确认修改"
                            Clicked="OnChangePasswordClicked"
                            BackgroundColor="{StaticResource Primary}"/>
                    
                    <Button Text="返回"
                            Clicked="OnCancelClicked"
                            BackgroundColor="{StaticResource Gray400}"/>
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage> 